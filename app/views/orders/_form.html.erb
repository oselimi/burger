<div class="form">
  <%= form_with(model: order, local: true) do |form| %>
    <div class="form-row"> 
      <div class="form-group col-md-6">
        <%= form.hidden_field :no, class:"form-control"%>
      </div>
      <br>
      <div class="form-group">
        <%= form.hidden_field :date, class:"form-control" %>
      </div>
      <div class="form-group hidden">
        <%= form.collection_select :statistic_id, Statistic.all, :id, :created_at%>
      </div>
    </div>
     <br>
    
    <%= form.submit 'Close Day', class:"btn btn-success btn-lg btn-block" %>
     <%= link_to "Back", :back %>
  <% end %>
</div>
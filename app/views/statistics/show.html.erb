<h1 class="text-center font-semibold text-xl pt-5">Day of <%= @statistic.created_at.strftime("%b-%d-%Y") %></h1>
<div class="mx-20 my-20 px-5 py-5 bg-white shadow-2xl rounded">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Date</th>
        <th scope="col">Order NO</th>
        <th scope="col">Price</th>
        <th scope="col">View</th>
      </tr>
    </thead>
    <tbody>
      <% @statistic.orders.each do |item| %>
      <tr>
        <th scope="row"></th>
        <td><%= item.date.strftime("%b-%d-%Y") %></td>
        <td><%= item.no %></td>
        <td><%= item.total_price %> mkd</td>
        <td><%= link_to "view", view_path(order_id: item.id)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <span class="font-bold text-base"> Total: <%= @statistic.total_price %>mkd</span>
  </div>
  <%= link_to 'Back', :back %>
</div>

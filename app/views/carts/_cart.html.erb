<div class="py-3 rounded">
<% unless @cart.order_items.empty? %>  
  <table class="table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2">Product</th>
        <th class="px-4 py-2">Price</th>
        <th class="px-4 py-2">Quantity</th>
        <th class="px-4 py-2">Total</th>
      </tr>
    </thead>
    <tbody class="border-t">
      <% @cart.order_items.each do |item| %>
      <tr>
        <td class=" px-4 py-2"><%= item.product.name %></td>
        <td class=" px-4 py-2"><%= item.product.price %></td>
        <td class=" px-4 py-2"><%= item.quantity %> </td>
        <td class=" px-4 py-2"><%= item.total_price %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="border-t pt-12 text-2xl">
    <h4 class="text-center pr-6 font-bold"><span>Total Price: <%= @cart.total_price %>mkd</span></h4>
    <div class="flex justify-between px-8 my-2 py-4 border-t">
      <% unless local_assigns[:show]%>
        <div class="bg-red-400 rounded-full hover:bg-gray-500">
          <%= button_to @cart, method: :delete, data: {confirm: "Are you sure"} do %>
            <svg class="w-12 h-12 px-1 py-1 text-red-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          <% end %>
        </div>
        <div class="bg-green-300 rounded-full hover:bg-blue-500">
          <%= button_to  order_food_path, method: :get do %>
            <svg class="w-12 h-12 px-1 py-1 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>

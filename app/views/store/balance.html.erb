<div class="container">
  <%= link_to 'All', all_path, class: "btn btn-light"%>
  <%= link_to 'Week', week_path, class: "btn btn-light"%>
  <%= link_to 'Month', month_path, class: "btn btn-light"%>
  <%= link_to 'Year', year_path, class: "btn btn-light"%>
  <button type="button" class="btn btn-dark pull-right">
    Total Orders: <span class="badge badge-light" style="background-color:red;"><%= @order %></span>
  </button>
</div>

<h1 class="text-center"> Today </h1><br>
 <div class="container" style="width: 500px; background-color: #dfd8c8; border-radius: 10px">
  <table class="table">
   <thead>
     <tr>
       <th scope="col"></th>
       <th scope="col">Date</th>
       <th scope="col">Time</th>
       <th scope="col">Order NO</th>
       <th scope="col">Price</th>
       <th scope="col">View</th>
     </tr>
   </thead>
   <tbody>
     <% @orders.each do |item| %>
     <% if item.finish.present? %>
     <tr>
       <th scope="row"></th>
       <td><%= item.date.strftime("%b-%d-%Y") %></td>
       <td><%= item.date.date.strftime("%l:%M%P") %></td>
       <td><%= item.no %></td>
       <td><%= item.total_price %></td>
       <td><%= link_to "view", view_path(order_id: item.id)%></td>
     </tr>
     <% end %>
    <% end %>
   </tbody>
 </table>
</div>
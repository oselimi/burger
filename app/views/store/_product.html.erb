<br/>
<div class="container">
  <div class="row row-cols-1   row-cols-md-2">
    <% @products.each do |product| %>
      <div class="col mb-4">
        <div class="card mb-3 text-right" style="max-width: 550px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <%= image_tag product.display_image if product.image.attached? %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.price %></p>
                <p class="card-text"><%= button_to "Add to Card", order_items_path(product_id: product.id, category_id: product.category.id), class:"btn btn-success btn-sm", remote: true %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


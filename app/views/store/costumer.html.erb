<div class="mx-10">
  <%= link_to "online: #{@user.name}", costumer_path(user_id: @user.id), class:"btn btn-success", style:"color:white"%>
  <%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-warning" %>
</div>

<div class="flex bg-gray-200 mx-4 my-4 gap-5 px-2">
  <div class="w-1/3 h-auto rounded shadow-xl" data-controller="toggle">
    <div class="text-center my-2">
      <button class="bg-black text-white px-2 py-2" data-action="click->toggle#toggle">Create Product</button>
    </div>
    <div class="card hidden mx-2 my-2" data-target="toggle.toggleable">
      <div class="card-body">
        <h5 class="card-title text-center"> Crate product </h5>
        <%= render 'products/form', product: @product %>
      </div>
    </div>
  </div>
  <div class="w-1/3 h-auto rounded shadow-xl" data-controller="category">
    <div class="text-center my-2">
      <button class="bg-black text-white px-2 py-2" data-action="click->category#category">Create Category</button>
    </div>
   <div class="card hidden mx-2 my-2" data-target="category.cardcategory">
    <div class="card-body">
      <h5 class="card-title text-center">Create Category</h5>
      <%= render 'categories/form', category: @category %>
    </div>
   </div>
  </div>
  <div class="w-1/3 h-auto rounded shadow-xl" data-controller="build">
    <div class="text-center my-2">
      <button class="bg-black text-white px-2 py-2" data-action="click->build#build">Create User</button>
    </div>
    <div class="card hidden mx-2 my-2"  data-target="build.card" >
       <div class="card-body">
         <h5 class="card-title  text-center">Create User</h5>
         <%= render 'users/form', user: @usr%>
       </div>
     </div>
  </div>
</div>

